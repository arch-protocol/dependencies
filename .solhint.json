{
    "extends": "solhint:all",
    "rules": {
        "compiler-version": [
            "error",
            ">=0.8.7"
        ],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "no-empty-blocks": "off",
        "no-inline-assembly": "off",
        "avoid-low-level-calls": "off",
        "not-rely-on-time": "off",
        "private-vars-leading-underscore": "off",
        "max-line-length": [
            "warn",
            100
        ],
        "function-max-lines": "off",
        "code-complexity": [
            "warn",
            15
        ]
    }
}